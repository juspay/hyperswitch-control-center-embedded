{
  "name": "hyperswitch-control-center-embedded",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Hyperswitch Control Center Embedded SDK",
  "workspaces": [
    "core",
    "react"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=core",
    "build:react": "npm run build --workspace=react",
    "type-check": "npm run type-check --workspaces",
    "type-check:core": "npm run type-check --workspace=core",
    "type-check:react": "npm run type-check --workspace=react",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "test:types": "npm run type-check",
    "prepublishOnly": "npm run build && npm run type-check"
  }
}